@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-body {
            margin: 120px;
        }

        .card-title {
            margin-bottom: 20px;
        }

        .btn-login {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="card text-center">
        <div class="card-body">
            <h1 class="card-title text-danger"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Access Denied</h1>
            <p class="card-text">You do not have permission to view this page.</p>
            <a href="/Account/Login" class="btn btn-primary btn-login">Login</a>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
